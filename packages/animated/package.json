{
  "name": "@polgubau/animated",
  "version": "1.0.5",
  "main": "dist/index.css",
  "style": "dist/index.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.css",
    "./summary": "./dist/summary.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node build.mjs",
    "build-watch": "node build-watch.mjs",
    "ready": "pnpm build && pnpm gather-variables",
    "watch": "concurrently \"pnpm build-watch\" \"node gather-variables.mjs --watch\"",
    "gather-variables": "node gather-variables.mjs",
    "gather-variables-watch": "node gather-variables.mjs --watch",
    "pack": "npm pack --dry-run",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "tailwindcss",
    "animations",
    "polgubau",
    "transition",
    "css",
    "motion",
    "tailwind4"
  ],
  "author": "Pol Gubau Amores",
  "license": "ISC",
  "description": "A collection of animations for Tailwind CSS 4 with just modern css",
  "dependencies": {
    "@tailwindcss/cli": "^4.0.3",
    "esbuild": "^0.24.2",
    "tailwindcss": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}